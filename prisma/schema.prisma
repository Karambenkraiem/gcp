datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  userId     Int     @id
  password   String
  email      String  @unique
  name       String?
  posts      String
  soldeConge Int?

  Conge Conge[]
}

model Conge {
  id          Int      @id @default(autoincrement())
  dateCreated DateTime @default(now()) // Automatically set the current date
  dateDebut   DateTime
  nbreJour    Int
  etatConge   String?
  adressConge String?
  User       User? @relation(fields: [userUserId], references: [userId])
  userUserId Int?
}
